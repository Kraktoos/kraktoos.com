---
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import { SITE_TITLE, SITE_DESCRIPTION } from "../config";
import { getCollection, getEntryBySlug } from "astro:content";

// use getCollection to fetch all posts and sort them by date
const posts = await getCollection("blog").then((posts) =>
  posts.sort((a, b) => {
    return new Date(b.data.pubDate) - new Date(a.data.pubDate);
  })
);
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <BaseHead title={"Blog | Kraktoos"} description={SITE_DESCRIPTION} />
    <style>
      ul {
        list-style-type: none;
        padding: unset;
      }
      ul li {
        display: flex;
      }
      ul li time {
        flex: 0 0 135px;
        font-family: var(--font-family-mono);
        color: #595959;
      }

      ul li a:visited {
        color: var(--visited-color);
      }
    </style>
  </head>
  <body>
    <Header />
    <main>
      <section>
        <ul>
          {
            posts.map((post) => (
              <li>
                <time datetime={post.data.pubDate} transition:name={`blogpost-pubdate-${post.slug}`}>
                  {new Date(post.data.pubDate).toLocaleDateString("en-us", {
                    year: "numeric",
                    month: "short",
                    day: "numeric",
                  })}
                </time>
                <a href={"/posts/" + post.slug} transition:name={`blogpost-name-${post.slug}`}>{post.data.title}</a>
              </li>
            ))
          }
        </ul>
      </section>
    </main>
    <Footer />
  </body>
</html>
