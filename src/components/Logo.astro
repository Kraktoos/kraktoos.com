---
import { Image } from "@astrojs/image/components";

export interface Props {
  src: string;
  alt: string;
  size?: number;
}

let { src, alt, size } = Astro.props as Props;

size = size || 22;
const doubleSize = size * 2;
---

<Image src={"/logos/" + src + ".png"} alt={alt} format="webp" width={doubleSize} height={doubleSize} fit="cover" style={{ width: size + "px", margin: "0", verticalAlign: "middle", display: "inline-block" }} />
