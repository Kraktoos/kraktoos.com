---
import { Image, getImage } from "astro:assets";

export interface Props {
  src: string;
  alt: string;
  size?: number;
}

let { src, alt, size } = Astro.props as Props;

size = size || 22;
const doubleSize = size * 2;
---

<Image
  src={import(`../logos/${src}.png`)}
  {alt}
  format="webp"
  width={doubleSize}
  height={doubleSize}
  style={{
    width: size + "px",
    margin: "0",
    verticalAlign: "middle",
    display: "inline-block",
    objectFit: "cover",
  }}
/>
