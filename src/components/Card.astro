---
export interface Props {
  title: string;
  img: string;
  stack: string[];
  description: string;
  link: string;
}

const { title, img, stack, description, link } = Astro.props as Props;
---

<a href={link} class="project">
  <div class="card-container">
    <div class="img-container">
      <img src={img} alt={title} />
      <p>{description}</p>
    </div>
    <h1>{title}</h1>
    <ul class="stack">
      {stack.map((item: string) => <li>{item}</li>)}
    </ul>
  </div>
</a>
<style>
  a {
    text-decoration: none;
  }
  a:hover {
    text-decoration: none;
  }
  p {
    font-size: 1rem;
    color: #000;
    line-height: 1.5rem;
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: 90%;
    text-align: center;
    opacity: 0;
    transition: opacity 0.25s ease;
    margin: 0;
  }
  .img-container {
    position: relative;
    width: 100%;
    height: 100%;
    overflow: hidden;
  }
  .card-container {
    display: flex;
    flex-direction: column;
    width: 100%;
    height: 100%;
    border-radius: 0.9rem;
    border: 2px solid #aaa;
    transition: all 0.1s ease-in-out;
    overflow: hidden;
  }
  .card-container:hover {
    transform: scale(1.02);
    box-shadow: 0 0 10px 0 rgba(0, 0, 0, 0.2);
  }
  @media (min-width: 768px) {
    .card-container {
      width: 100%;
      height: 100%;
    }
  }
  .card-container:hover img {
    opacity: 40%;
    filter: blur(5px);
  }
  .card-container:hover p {
    opacity: 100%;
  }
  .card-container img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: all 0.1s ease-in;
    opacity: 100%;
  }
  h1 {
    font-size: 1.3rem;
    padding: 0.7rem 1rem;
    margin: 0;
  }
  .stack {
    font-family: var(--font-family-mono);
    display: flex;
    flex-wrap: wrap;
    padding: 0;
    margin: 0;
    list-style: none;
    gap: 0.5rem;
    padding: 0 1rem 1rem 1rem;
  }
  ul li {
    padding: 0.3rem 0.5rem;
    border-radius: 0.5rem;
    border: 2px solid #aaa;
    color: #333;
  }
  /* dark theme */
  @media (prefers-color-scheme: dark) {
    p {
      color: #fff;
    }
    .card-container {
      border: 2px solid #666;
    }
    .card-container:hover {
      box-shadow: 0 0 10px 0 rgba(255, 255, 255, 0.2);
    }
    ul li {
      border: 2px solid #666;
      color: #eee;
    }
  }

  @media (max-width: 620px) {
    .stack {
      justify-content: center;
    }
  }
</style>
